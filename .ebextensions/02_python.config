option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "mysite.settings"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: mysite/wsgi.py
    NumProcesses: 3
    NumThreads: 20

container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && ./manage.py makemigrations
    && ./manage.py migrate"
    leader_only: true
